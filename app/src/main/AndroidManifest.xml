<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caniaffordit.caniaffordit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CanSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMoneyIn"
            android:label="@string/title_activity_add_money_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddMoneyOut"
            android:label="@string/title_activity_add_money_out"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CanIAffordIt"
            android:label="@string/title_activity_can_iafford_it"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Settings"></activity>
    </application>

</manifest>
